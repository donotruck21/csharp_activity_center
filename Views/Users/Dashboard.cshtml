@{
    ViewData["Title"] = "Dashboard Page";
}
<div class="container">
    <div class="head-nav">
        <h1>Dojo Activity Center</h1>
        <h3>Welcome @ViewBag.CurrUser.FirstName @ViewBag.CurrUser.LastName</h3>
        <a href="Logout">Log Out</a>
    </div>
    <hr>
    <table class="table table-striped myTable table-bordered">
        <thead>
            <tr>
                <th>Activity</th>
                <th>Date and Time</th>
                <th>Duration</th>
                <th>Event Coordinator</th>
                <th>Number of Participants</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var activity in ViewBag.AllActivities){
                    <tr>
                        <td><a href="activity/@activity.ActivityId">@activity.Title</a></td>
                        <td>@activity.ActivityDate.ToString("MM/dd") @activity.ActivityTime.ToString("hh:mm tt")</td>
                        <td>@activity.DurationVal @activity.DurationUnit</td>
                        <td>@activity.User.FirstName @activity.User.LastName</td>
                        <td>0</td>
                        <td>action</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a href="NewActivity"><button>Add A New Activity!</button></a>
</div>